{
  "manifest_version": 3,
  "name": "ContentToPopup Test",
  "version": "1.0",
  "permissions": ["tabs", "storage", "downloads", "activeTab", "scripting"],
  "web_accessible_resources": [{
    "resources": ["normal_popup.html", "normal_popup.js", "popup.js"],
    "matches": [
              "https://*/*",
              "http://*/*"
    ]
  }],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
      "js": ["content.js"],
      "matches": [
          "https://*/*",
          "http://*/*"
      ]
  }]
}
